<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coffeecup"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee Enterprise"
        android:textColor="#fff"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:id="@+id/coffe_text"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/coffe_text"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:id="@+id/username_id">


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/user"
        android:layout_below="@id/coffe_text"
        android:id="@+id/user"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="USERNAME"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:background="@null"
        />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#c6ffffff"
            android:layout_below="@id/username_id"
            android:layout_marginTop="10dp"
            android:id="@+id/first_view"></View>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_id"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:id="@+id/password_id"
            android:layout_marginTop="30dp"
            >


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/padlock"
                android:layout_below="@id/user"

                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PASSWORD"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:paddingLeft="20dp"
                android:textSize="15dp"
                android:background="@null"
                />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#c6ffffff"
            android:layout_below="@id/password_id"
            android:layout_marginTop="10dp"
            android:id="@+id/second_view"></View>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/second_view"
            android:layout_marginTop="20dp"
            android:id="@+id/check_box_layout">


         <android.support.v7.widget.AppCompatCheckBox
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:buttonTint="#fff"
             android:id="@+id/check_box"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textColor="#fff"
            android:layout_toRightOf="@id/check_box"
            android:layout_centerVertical="true"
            />


        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#fff"
            android:background="#e88cefd8"
            android:layout_below="@id/check_box_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="20dp"
            android:id="@+id/button"
            android:onClick="login"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="New here? Create an account?"
            android:layout_below="@id/button"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>


    </RelativeLayout>
</RelativeLayout>
